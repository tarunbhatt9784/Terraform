#############################################################################
# VARIABLES
#############################################################################

variable "resource_group_name" {
  type = string
}

variable "location" {
  type    = string
  default = "Australia Southeast"
}


#############################################################################
# PROVIDERS
#############################################################################

provider "azurerm" {
  version = "~> 1.0"
}

#############################################################################
# RESOURCES
#############################################################################

resource "azurerm_resource_group" "newrg" {
  name     = var.resource_group_name
  location = var.location
}

